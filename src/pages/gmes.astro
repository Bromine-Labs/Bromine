---
import Layout from "@/Layout.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="gmes - bromine" desc="bromine's gmes page" class="no-scrollbar">
  <script src="@/utils/gmes.ts"></script>

  <style>
    /* Target the element that contains scrollable content */
    html,
    body,
    #gmeContainer {
      overflow-y: scroll; /* content is scrollable */
      scrollbar-width: none; /* Firefox */
    }

    html::-webkit-scrollbar,
    body::-webkit-scrollbar,
    #gmeContainer::-webkit-scrollbar {
      width: 0px; /* hide scrollbar in WebKit browsers */
      background: transparent;
    }
  </style>

  <div
    class="sticky top-0 z-50 flex justify-center py-3 shadow-md backdrop-blur"
  >
    <div
      class="bg-surface flex w-full max-w-xl items-center rounded-md px-3 shadow"
    >
      <Icon name="ph:magnifying-glass-bold" class="text-muted size-5" />
      <input
        id="search"
        type="text"
        placeholder="Search..."
        class="w-full flex-1 bg-transparent py-2 pl-3 focus:outline-none"
      />
    </div>
  </div>

  <section id="gmeContainer"></section>

  <script
    async
    data-cfasync="false"
    src="//learningbuildingroughly.com/b113e1888ef757be96cdcc722c0f31c8/invoke.js"
  ></script>
  <div id="container-b113e1888ef757be96cdcc722c0f31c8"></div>

  <div id="gmePageContainer" class="bg-surface/90 fixed inset-0 z-[999] hidden">
    <h2
      id="gmePageTitle"
      class="absolute top-[15px] left-[20px] z-50 text-3xl font-bold"
    >
    </h2>

    <button
      id="backBtn"
      class="bg-overlay/70 hover:bg-surface/70 absolute top-[15px] right-[20px] z-50 flex cursor-pointer items-center rounded-lg border-0 px-4 py-2 transition"
    >
      <Icon name="ph:x" class="size-5" />
      Close
    </button>

    <iframe
      id="gmePageFrame"
      class="absolute top-0 left-0 h-full w-full border-none"
      allowfullscreen></iframe>
  </div>
</Layout>
