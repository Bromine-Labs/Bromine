---
import { Icon } from 'astro-icon/components';

export interface Props {
  title: string;
  isActive: boolean;
  iconName?: string;
}
const { title, isActive, iconName } = Astro.props;

// Refined styling for tabs
const baseTabClasses = "flex items-center px-3 py-1.5 cursor-pointer border-b-2 text-sm select-none whitespace-nowrap";
const activeTabClasses = "border-sky-500 text-sky-300 bg-gray-700/60"; // Slightly more opaque active bg
const inactiveTabClasses = "border-transparent text-gray-400 hover:text-gray-200 hover:bg-gray-700/40";
// Removed hover:border-gray-500 from inactive as hover:bg should be enough
---
<div class:list={[baseTabClasses, isActive ? activeTabClasses : inactiveTabClasses]}>
  {iconName && <Icon name={iconName} class="w-4 h-4 mr-2 flex-shrink-0" />}
  <span class="truncate max-w-[120px] sm:max-w-[160px] md:max-w-[200px]" title={title}>{title}</span> {/* Responsive max-width for title */}
</div>
